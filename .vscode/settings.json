{
    "editor.rulers": [
        90,
        120
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.languageServer": "Pylance",
    "isort.args": [
        "--profile",
        "black"
    ],
    "autoDocstring.docstringFormat": "numpy",
}